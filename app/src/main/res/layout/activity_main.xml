                android:layout_height="match_parent"
                android:background="@color/container"
                android:paddingLeft="@dimen/container_parent_bottomline_padding_left_right"
                android:paddingRight="@dimen/container_parent_bottomline_padding_left_right">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/container_bottom_parent_pinning_delay"
