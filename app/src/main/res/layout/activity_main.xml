<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/container_main_margin"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="none"
        android:touchscreenBlocksFocus="false"
        app:layout_constraintHeight="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_settings"
                android:textSize="@dimen/title_main" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/space"
                android:overScrollMode="never"
                android:scrollbars="none" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container_title_indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_title_indicator"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@mipmap/title_indicator_foreground" />

                <TextView
                    android:id="@+id/title_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/title_indicator"
                    android:textSize="@dimen/title"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/img_title_indicator"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container_pinning_delay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/conteiners_border_radius_top"
                android:clickable="true"
                android:paddingLeft="@dimen/container_parent_padding_left_right"
                android:paddingTop="@dimen/container_parent_padding_top_bottom"
                android:paddingRight="@dimen/container_parent_padding_left_right"
                android:paddingBottom="@dimen/container_parent_padding_top_bottom"
                tools:ignore="KeyboardInaccessibleWidget">

                <TextView
                    android:id="@+id/container_text_pinning_delay"
                    android:layout_width="189dp"
                    android:layout_height="22dp"
                    android:background="@color/container"
                    android:text="@string/pinning_delay"
                    android:textAlignment="textStart"
                    android:textSize="@dimen/default_text_size"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/container_value_pinning_delay"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:background="@color/container"
                    android:text="@string/pinning_delay_value"
                    android:textAlignment="center"
                    android:textSize="@dimen/value"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/container_text_pinning_delay"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <SeekBar
                    android:id="@+id/container_seekbar_pinning_delay"
                    android:layout_width="349dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/seek_margin_top"
                    android:max="@integer/seekbar_max_pinning_delay"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.47"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/container_text_pinning_delay"
                    app:layout_constraintVertical_bias="1.0" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container_bottom_pinning_delay"
